<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <style name="AppTheme" parent="@style/BaseTheme">
        <item name="colorSecondaryVariant">@color/colorMainContentLight</item>
    </style>

    <style name="AppTheme.LightBlue"  parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryCyan</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantCyan</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorPrimaryCyan</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>

    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">22dp</item>
    </style>

    <style name="AppTheme.Orange"  parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantOrange</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorPrimaryOrange</item>
    </style>

</resources>