<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/backdrop_subheader_space_normal"
    android:paddingEnd="@dimen/backdrop_subheader_space_normal"
    android:paddingTop="@dimen/backdrop_subheader_space_normal">

    <ImageView
        android:id="@+id/backdropSubHeaderIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/backdropSubHeaderTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backdropSubHeaderTitleTextView"
        app:srcCompat="@drawable/backdrop_ic_up" />

    <TextView
        android:id="@+id/backdropSubHeaderTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/backdrop_subheader_space_small"
        android:text="Subheader"
        app:layout_constraintStart_toEndOf="@+id/backdropSubHeaderIconImageView"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/backdrop_divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/backdrop_subheader_space_normal"
        app:layout_constraintTop_toBottomOf="@+id/backdropSubHeaderTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>