<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/backdrop_subheader_space_normal"
    android:paddingTop="@dimen/backdrop_subheader_space_small"
    android:paddingEnd="@dimen/backdrop_subheader_space_normal"
    app:layout_constraintHeight_default="wrap"
    app:layout_constrainedHeight="true">

    <ImageView
        android:id="@+id/backdropSubHeaderIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/backdrop_subheader_space_small"
        app:layout_constraintBottom_toBottomOf="@+id/backdropSubHeaderTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backdropSubHeaderTitleTextView" />

    <TextView
        android:id="@+id/backdropSubHeaderTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Subheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/backdrop_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/backdrop_subheader_space_small"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backdropSubHeaderTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>